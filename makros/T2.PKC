#
# test of arithemtic terms
#
# cause PKSMakroC - Integers are only 24 bit big, this macro
# will cause overflows for fac(>12) !
#
macro fac()
{
	int		count = 1;
	int		n = 1;
	int		save_n = 1;
	int		res = 1;
	string	erg = "";

	n = (int)PromptAssign("Enter value: ","10");
	save_n = n;

	while(n > 1) {
		res = res * n;
		n = n - 1;
	}

	erg = "Faculty of " + (string) save_n + " is: " + (string) res;

	Alert(erg);
}

