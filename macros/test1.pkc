
macro Test-Expr()
{
	string s1;
	string s2;
	string re;
	string result;
	
	s1 = "aec\\";
	re = "[a-e]+\\\\";
	
   	if (s1 ~ re)
		s2 = "' is matched by '";
   	else
		s2 = "' is not matched by '";
	
	result = "String '" + s1 + s2 + re + "'";
	MessageBox(MB_OK, result);
}

macro Test-While() {
	int i = 2+2;
	while (i < 20) {
		CursorDown(MOT_SINGLE);
		i = i+1;
	}
}

