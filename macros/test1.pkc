
const PI = 3.14159265359d;
const QUOTE = '\'';

/*
 * This method tests regular expression matching in
 * PKS-MacroC code.
 */
macro Test-Expression()
{
	string s1;
	string s2 = "x";
	string re;
	int x;

	s1 = "aec\\";
	re = "[a-e]+\\\\";

   	if (s1 ~ re) {
		s2 = "' is matched by '";
   	} else {
		s2 = "' is not matched by '";
		x = 13;
	}
	
	MessageBox(MB_OK, "String '" + s1 + s2 + re + QUOTE);

	if (s1) {
		MessageBox(MB_OK, "OK");
	}
}

macro Calculate-Circle-Area(float radius) {
	return radius * radius * PI;
}

macro Test-Calc-Radius() {
	float r = 3.5;
	
	MessageBox(MB_OK, "The Area of a circle with radius " + r + " is " + Calculate-Circle-Area(r));
}

/*
 * String functions and operators.
 */
macro Test-Strings() {
	string myString = "hello world";
	string subString;
	char x;
	range r;
	int n = strlen(myString);
	
	MessageBox(MB_OK, "String is " + n + " characters long");
	x = myString[7];
	MessageBox(MB_OK, "The 7th character is: '" + x + QUOTE);

	r = 1..3;
	subString = myString[r];
	MessageBox(MB_OK, "The substring(1,3) is '" + subString + QUOTE);
}

/*
 * Evaluate various binary expressions and print the results.
 */
macro Test-Binary-Expressions() {
	MessageBox(MB_OK, "\"a\" + \"b\" -> " + ("a" + "b"));
	MessageBox(MB_OK, "\"abcd\" - \"bc\" -> " + ("abcd" - "bc"));
	MessageBox(MB_OK, "7 * 'x' -> " + (7 * 'x'));
	MessageBox(MB_OK, "7 * \"xy\" -> " + (7 * "xy"));
	MessageBox(MB_OK, "1 | 0xA -> " + (1 | 0xA));
	MessageBox(MB_OK, "1 & 0xA -> " + (1 & 0xA));
	MessageBox(MB_OK, "3 ^^ 3 -> " + (3 ^^ 3));
	MessageBox(MB_OK, "12 >> 2 -> " + (12 >> 2));
	MessageBox(MB_OK, "8 << 2 -> " + (8 << 2));
	MessageBox(MB_OK, "2 + 3 * 3 -> " + (2 + 3 * 3));
	MessageBox(MB_OK, "4 - 3 / 2 -> " + (4 - 3 / 2));
	MessageBox(MB_OK, "7 * 3 % 4 ^ 2 -> " + (7 * 3 % 4 ^ 2));
}


/*
 * This method allocates one million objects in a loop and can be used to
 * debug the simple GC of PKS-Edit.
 */
macro Test-GC() {
	string x;
	int i = 0;
	
	while(i < 1000000) {
		x = "Hello World " + i;
		i++;
	}
	MessageBox(MB_OK, x);
}

macro Test-While() {
	int i = 2+2;
	while (i < 20) {
		CursorDown(MOT_SINGLE);
		i++;
	}
}

