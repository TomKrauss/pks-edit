macro Test-Params(int par, string par2)
{
	string tmp;

    Alert("Hello");
	tmp = "We have passed " + (string)par + " as parameter 1 and '" + (string)par2 + "' as parameter 2";
	par2 = 14;
	Alert(tmp);
	tmp = "Now parameter 2 was changed to:" + par2;
	Alert(tmp);
}


macro Test-Call()
{

