{
  "grammars": [
    {
      "scopeName": "batch",
      "patterns": [
        {
          "match": "@?rem.*",
          "style": "comment",
          "ignore-case": true,
          "name": "comment.singleLine"
        },
        {
          "match": "^:[a-z0-9]+",
          "style": "annotation",
          "name": "batch.label"
        },
        {
          "match": "%[0-9a-zA-Z%_*]+",
          "style": "string",
          "name": "batch.variable"
        },
        {
          "match": "![0-9a-zA-Z_]+!",
          "style": "string",
          "name": "batch.variable2"
        },
        {
          "match": "@[a-z]+",
          "style": "control",
          "name": "batch.noecho"
        },
        {
          "keywords": [
            "break",
            "by",
            "call",
            "callext",
            "case",
            "debug",
            "drop",
            "do",
            "doskey",
            "gtr",
            "else",
            "echo",
            "end",
            "endfor",
            "endfunction",
            "endif",
            "endselect",
            "endswitch",
            "endwhile",
            "exit",
            "for",
            "gosub",
            "goto",
            "if",
            "include",
            "next",
            "return",
            "set",
            "select",
            "switch",
            "then",
            "to",
            "while"
          ],
          "ignore-case": true,
          "style": "keyword",
          "name": "keyword.batch"
        },
        {
          "match": "[=+<>-]+",
          "style": "operator",
          "name": "batch.operator"
        }
      ]
    }
  ]
}
