{
  "grammars": [
    {
      "scopeName": "pksedit",
      "description": "Grammar for the PKS-Edit macro language PKSMacroC",
      "import": [ "commonc" ],
      "analyzer": "pks-macros",
      "evaluator": "pks-macros",
      "wordCharacterClass": "a-zäöü=A-ZÄÖÜß_0-9@-",
      "patterns": [
        {
          "begin": "/*",
          "end": "*/",
          "style": "comment",
          "name": "comment.multiLine"
        },
        {
          "match": "#.*",
          "style": "comment",
          "name": "comment.singleLine2"
        },
        {
          "match": "//.*",
          "style": "comment",
          "name": "comment.singleLine"
        },
        {
          "match": "<[A-Z_][A-Z_0-9]*>",
          "name": "constant.identifier",
          "style": "identifier"
        },
        {
          "match": "<@[A-Za-z0-9_-]+>",
          "name": "pksedit.command.identifier",
          "style": "annotation"
        },
        {
          "name": "keyword.pksedit",
          "style": "keyword",
          "keywords": [
            "macro",
            "do",
            "if",
            "else",
            "elif",
            "switch",
            "while",
            "braeq",
            "continue",
            "const",
            "break",
            "return",
            "local",
            "goto",
            "char",
            "int",
            "string",
            "long",
            "boolean",
            "true",
            "false",
            "float"
          ]
        },
        {
          "match": "\"(?:[^\"]|\\\")*?\"",
          "style": "string",
          "name": "string"
        },
        {
          "match": "<0[xX][0-9a-fA-F]+>",
          "name": "constant.numeric.hex",
          "style": "literal"
        },
        {
          "match": "<[0-9.]+d?>",
          "name": "constant.numeric",
          "style": "literal"
        },
        {
          "match": "<[A-Za-z0-9_-]+>",
          "name": "pksedit.command.identifier",
          "style": "default"
        },
        {
          "match": "[*%/-+\\[\\]{}]",
          "name": "keyword.operator",
          "style": "operator"
        }
      ]
    }
  ]
}
