{
  "grammars": [
    {
      "scopeName": "pksedit",
      "description": "Grammar for the PKS-Edit macro language PKSMacroC",
      "import": [ "commonc" ],
      "analyzer": "pks-macros",
      "evaluator": "pks-macros",
      "wordCharacterClass": "a-zäöü=A-ZÄÖÜß_0-9@-",
      "patterns": [
        {
          "match": "#.*",
          "style": "comment",
          "name": "comment.singleLine2"
        },
        {
          "match": "<@[A-Za-z0-9_-]+>",
          "name": "pksedit.identifier",
          "style": "string"
        },
        {
          "name": "keyword.pksedit",
          "style": "keyword",
          "keywords": [
            "macro",
            "do",
            "if",
            "else",
            "elif",
            "switch",
            "while",
            "braeq",
            "continue",
            "const",
            "break",
            "return",
            "local",
            "goto",
            "char",
            "int",
            "string",
            "long",
            "float"
          ]
        },
        {
          "match": "\"(?:[^\"]|\\\")*?\"",
          "style": "string",
          "name": "string"
        },
        {
          "match": "[\\[\\]{}]",
          "name": "keyword.operator.json",
          "style": "operator"
        },
        {
          "match": "<[0-9.]+d?>",
          "name": "constant.numeric",
          "style": "literal"
        }
      ]
    }
  ]
}
