{
  "grammars": [
    {
      "scopeName": "python",
      "highlightBrackets": [
        {
          "left": "(",
          "right": ")"
        },
        {
          "left": "[",
          "right": "]"
        }
      ],
      "patterns": [
        {
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "style": "comment",
          "name": "comment.multiLine",
          "patterns": [
            {
              "match": ":[a-zA-Z]+",
              "style": "bold-comment",
              "name": "pythodoc.tags"
            }
          ]
        },
        {
          "begin": "'''",
          "end": "'''",
          "style": "comment",
          "name": "comment.multiLine",
          "patterns": [
            {
              "match": ":[a-zA-Z]+",
              "style": "bold-comment",
              "name": "pythodoc.tags"
            }
          ]
        },
        {
          "match": "#.*",
          "style": "sl-comment",
          "name": "comment.singleLine"
        },
        {
          "match": "\"(?:\\\"|[^\"])+\"",
          "style": "string",
          "name": "string"
        },
        {
          "match": "'(?:\\'|[^'])+'",
          "style": "string",
          "name": "string2"
        },
        {
          "match": "<[A-Z_][A-Z_0-9]*>",
          "style": "identifier",
          "name": "constant.identifier"
        },
        {
          "keywords": [
            "def",
            "class",
            "return",
            "if",
            "in",
            "for",
            "import",
            "self",
            "super"
          ],
          "style": "keyword",
          "name": "keyword.py"
        },
        {
          "match": "<[-+]?[0-9.]+([xX][a-fA-F0-9]+|b[01]+|e[-+0-9]+)?>",
          "style": "literal",
          "name": "literal.numeric"
        },
        {
          "match": "'(?:\\\\'|\\\\u\\\\d+|[^'])'",
          "style": "literal",
          "name": "literal.char"
        },
        {
          "match": "[-+&|<>=!]{1,2}",
          "style": "operator",
          "name": "keyword.operator"
        }
      ]
    }
  ]
}
