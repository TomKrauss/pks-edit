{
  "grammars": [
    {
      "scopeName": "pascal",
      "highlightBrackets": [
        {
          "left": "BEGIN",
          "right": "END"
        },
        {
          "left": "(",
          "right": ")"
        },
        {
          "left": "[",
          "right": "]"
        }
      ],
      "patterns": [
        {
          "begin": "(*",
          "end": "*)",
          "style": "comment",
          "name": "comment.multiLine"
        },
        {
          "begin": "{",
          "end": "}",
          "style": "comment",
          "name": "comment.multiLine2"
        },
        {
          "match": "\"(?:\\\"|[^\"])+\"",
          "style": "string",
          "name": "string"
        },
        {
          "match": "<[A-Z_][A-Z_0-9]*>",
          "style": "identifier",
          "name": "constant.identifier"
        },
        {
          "keywords": [
            "BEGIN",
            "END",
            "IF",
            "ELSE",
            "FUNCTION",
            "TYPE",
            "PROCEDURE",
            "WHILE",
            "AND",
            "INTERFACE",
            "NOT",
            "PROGRAM",
            "VAR",
            "TEXT",
            "THEN",
            "ELSE",
            "ELIF",
            "UNIT",
            "CONST",
            "TYPE",
            "FOR",
            "DO",
            "REPEAT",
            "UNTIL",
            "CASE",
            "OF"
          ],
          "style": "keyword",
          "name": "keyword.pascal"
        },
        {
          "match": "<[-+]?[0-9.]+([xX][a-fA-F0-9]+|b[01]+|e[-+0-9]+)?>",
          "style": "literal",
          "name": "literal.numeric"
        },
        {
          "match": "'(?:\\\\'|\\\\u\\\\d+|[^'])'",
          "style": "literal",
          "name": "literal.char"
        },
        {
          "match": ":=",
          "style": "operator",
          "name": "keyword.assignment"
        }
      ]
    }
  ]
}
